<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permission to access the internet -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- usesCleartextTraffic attribute is set to true for permitting cleartext traffic, as the app uses HTTP -->
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MiniMarket"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".ui.view.MyOrdenActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.MisComprasActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.ConfirmacionActivity"
            android:exported="true" />
        <activity
            android:name=".ui.view.ubicacionPedidoActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.ProductsByCategoryActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.CategoryActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.CestaActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.RegisterUser"
            android:exported="false" />
        <activity
            android:name=".ui.view.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.view.DetailProductActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.PrincipalActivity"
            android:exported="false" />
    </application>

</manifest>